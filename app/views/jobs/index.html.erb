<h1>RailsBridgeCorp Open Jobs</h1>


<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>
		<% @jobs.each do |job| %>
		<tr>
			<td><%= link_to job.title, job_path(job) %></td>
			<td><%= job.description %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= datatables :jobs_source %>
