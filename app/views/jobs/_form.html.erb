<%= form_for @job do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <span class="error">Title <%= f.object.errors[:title].to_sentence %></span>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description, size: '60x6' %>
    <span class="error">Description <%= f.object.errors[:description].to_sentence  %></span
  </div>
  <div>
    <%= 
      f.submit
     %>
  </div>
<% end %>